{% extends 'base.html.twig' %}

{% block title %}Quora{% endblock %}

{% block body %}
    <ul>
        {% for question in questions %}
            <div  class="block block-shadow d-flex flex-row mb-20">
                {% include "partials/_rating.html.twig" with { rating:  question.rating, from: 'question', id: question.id }%}
                <a href="{{ path('question_show', { id: question.id }) }}" class="flex-fill d-flex flex-column">
                    <div class="mb-20 question-content pb-20">
                        <h3 class="mb-20">{{ question.title }}</h3>
                        <p>{{ question.content }}</p>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <img class="mr-10 avatar" src="https://randomuser.me/api/portraits/men/39.jpg">
                            <p class="small">Demand√© par <span class="cliquable">Marc</span></p>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <i class="fa-regular fa-comment mr-5"></i>
                            <p>{{ question.numberOfResponse }}</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </ul>
{% endblock %}
