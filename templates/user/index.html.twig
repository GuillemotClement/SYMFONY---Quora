{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="block">
        <h2>Page de profil</h2>
        {{form_start(form)}}
            {{form_rest(form)}}
            <button class="btn btn-primary mr-10">Valider</button>
        {{form_end(form)}}
    </div>

    <div class="block">
        <h3>Mes questions</h3>
        <ul>
            {% for question in app.user.questions %}
                <li>{{question.title}}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="block">
        <h3>Mes r√©ponses</h3>
        <ul>
            {% for comment in app.user.comments %}
                <li>{{comment.content | slice(0, 50) }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
